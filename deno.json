{
  "tasks": {
    "fmt": "deno fmt",
    "fmt-ci": "deno fmt --check",
    "lint": "deno lint",
    "test:cov": "deno test --coverage=coverage",
    "coverage": "deno coverage coverage",
    "coverage:html": "deno coverage coverage --html",
    "coverage:lcov": "deno coverage coverage --lcov --output=coverage/lcov.info",
    "build": "deno run -A build.ts",
    "all": "deno task build && deno task fmt && deno task lint && deno task test:cov"
  },
  "fmt": {
    "exclude": ["dist", "*.md"]
  },
  "lint": {
    "exclude": ["dist"]
  },
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "deno.window"],
    "strict": true,
    "types": ["npm:@types/chrome"]
  },
  "imports": {
    "deno_emit": "https://deno.land/x/emit@0.40.0/mod.ts",
    "std/": "https://deno.land/std@0.224.0/",
    "assert/": "https://deno.land/std@0.208.0/assert/"
  }
}
