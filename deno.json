{
  "tasks": {
    "check": "deno check . && deno lint",
    "test": "deno test --allow-read --coverage=reports/coverage",
    "test:e2e": "deno run --allow-all npm:playwright test",
    "coverage": "deno coverage reports/coverage",
    "build": "deno run -A build.ts",
    "fmt": "deno fmt",
    "update": "deno outdated --update",
    "all": "deno task update && deno task check && deno task test && deno task test:e2e && deno task build && deno task fmt"
  },
  "fmt": {
    "exclude": ["dist", "*.md"]
  },
  "lint": {
    "exclude": ["dist"]
  },
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "deno.window"],
    "strict": true,
    "types": ["npm:@types/chrome"]
  },
  "nodeModulesDir": "auto",
  "imports": {
    "@playwright/test": "npm:@playwright/test@^1.56.1",
    "@std/testing": "jsr:@std/testing@^1.0.16",
    "deno_emit": "https://deno.land/x/emit@0.40.0/mod.ts",
    "std/": "https://deno.land/std@0.224.0/",
    "assert/": "https://deno.land/std@0.208.0/assert/",
    "deno-dom": "jsr:@b-fuze/deno-dom@0.1.56"
  }
}
